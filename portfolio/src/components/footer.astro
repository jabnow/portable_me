---
const currentYear = new Date().getFullYear();

const socialLinks = [
  { name: 'GitHub', href: 'https://github.com/jabnow', icon: 'github' },
  { name: 'LinkedIn', href: 'linkedin.com/in/wang-joy', icon: 'linkedin' },
  { name: 'Devpost', href: 'https://devpost.com/jabnow', icon: 'Devpost' },
  { name: 'Email', href: 'mailto:joywang@nyu.edu', icon: 'email' }
];
---

<footer class="footer">
  <div class="footer-container">
    <div class="footer-content">
      <div class="footer-info">
        <p class="footer-text">Â© Joy Wang {currentYear} Academic Portfolio. Updates Last Friday Monthly.</p>
      </div>
      
      <div class="footer-social">
        {socialLinks.map(link => (
          <a 
            href={link.href} 
            class="social-link"
            target="_blank"
            rel="noopener noreferrer"
            aria-label={link.name}
          >
            {link.name}
          </a>
        ))}
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    border-top: 1px solid var(--color-border);
    background-color: var(--color-surface);
    margin-top: var(--spacing-3xl);
  }
  
  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: var(--spacing-2xl) var(--spacing-lg);
  }
  
  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--spacing-xl);
  }
  
  .footer-text {
    color: var(--color-text-tertiary);
    font-size: 0.9rem;
  }
  
  .footer-social {
    display: flex;
    gap: var(--spacing-lg);
  }
  
  .social-link {
    color: var(--color-text-secondary);
    font-size: 0.9rem;
    transition: color var(--transition-fast);
  }
  
  .social-link:hover {
    color: var(--color-primary);
  }
  
  @media (max-width: 768px) {
    .footer-content {
      flex-direction: column;
      text-align: center;
    }
  }
</style>

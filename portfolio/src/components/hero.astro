<section class="hero">
  <div class="container">
    <div class="hero-wrapper">
      <div class="hero-content">
        <h1 class="hero-title">
          <span class="hero-greeting">Hello, I'm</span>
          <span class="hero-name">Joy Wang :D</span>
        </h1>
        <p class="hero-subtitle">Business Analyst and Software Developer</p>
        <p class="hero-description">
          I pitch and develop software solutions to help clients automate and scale their operations.
          My work also includes themes of creating inclusive digital experiences and systems design in workplace technology.
        </p>
        <div class="hero-cta">
          <a href="#contact" class="btn btn-primary">Get in Touch</a>
          <a href="/resume" class="btn btn-secondary">View Resume</a>
        </div>
      </div>
      <div class="hero-profile">
        <img 
          src="/assets/profile.png" 
          alt="Dr. Jane Smith" 
          class="profile-image"
          onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
        />
        <div class="profile-placeholder" style="display: none;">
          <span class="profile-initials">JS</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding-top: 5rem;
    position: relative;
  }
  
  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 100%;
    background: radial-gradient(ellipse at top, rgba(96, 165, 250, 0.1), transparent 50%);
    pointer-events: none;
  }
  
  .hero-wrapper {
    display: flex;
    align-items: center;
    gap: var(--spacing-3xl);
    width: 100%;
    position: relative;
    z-index: 1;
  }
  
  .hero-content {
    flex: 1;
    max-width: 700px;
  }
  
  .hero-greeting {
    display: block;
    font-size: 2rem;
    font-weight: 400;
    color: var(--color-text-secondary);
    margin-bottom: var(--spacing-md);
  }
  
  .hero-name {
    display: block;
    font-size: 4.5rem;
    font-weight: 700;
    background: linear-gradient(135deg, var(--color-primary), var(--color-accent));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: var(--spacing-lg);
    line-height: 1.1;
  }
  
  .hero-subtitle {
    font-size: 1.75rem;
    color: var(--color-text-primary);
    font-weight: 500;
    margin-bottom: var(--spacing-lg);
  }
  
  .hero-description {
    font-size: 1.1rem;
    line-height: 1.8;
    margin-bottom: var(--spacing-2xl);
    max-width: 700px;
  }
  
  .hero-profile {
    flex-shrink: 0;
    width: 300px;
    height: 300px;
    position: relative;
  }
  
  .profile-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
    border: 4px solid var(--color-primary);
    box-shadow: 0 20px 60px rgba(96, 165, 250, 0.3);
  }
  
  .profile-placeholder {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--color-primary), var(--color-accent));
    display: flex;
    align-items: center;
    justify-content: center;
    border: 4px solid var(--color-primary);
    box-shadow: 0 20px 60px rgba(96, 165, 250, 0.3);
  }
  
  .profile-initials {
    font-size: 5rem;
    font-weight: 700;
    color: var(--color-background);
  }
  
  .hero-cta {
    display: flex;
    gap: var(--spacing-md);
    flex-wrap: wrap;
  }
  
  .btn {
    padding: var(--spacing-md) var(--spacing-xl);
    border-radius: var(--radius-md);
    font-weight: 500;
    font-size: 1rem;
    transition: all var(--transition-base);
    display: inline-block;
  }
  
  .btn-primary {
    background-color: var(--color-primary);
    color: var(--color-background);
  }
  
  .btn-primary:hover {
    background-color: var(--color-primary-hover);
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(96, 165, 250, 0.3);
  }
  
  .btn-secondary {
    border: 2px solid var(--color-border);
    color: var(--color-text-primary);
  }
  
  .btn-secondary:hover {
    border-color: var(--color-primary);
    color: var(--color-primary);
    transform: translateY(-2px);
  }
  
  @media (max-width: 968px) {
    .hero-wrapper {
      flex-direction: column;
      text-align: center;
      gap: var(--spacing-2xl);
    }
    
    .hero-profile {
      width: 250px;
      height: 250px;
    }
    
    .hero-name {
      font-size: 3.5rem;
    }
    
    .hero-greeting {
      font-size: 1.75rem;
    }
  }
  
  @media (max-width: 768px) {
    .hero {
      min-height: 80vh;
    }
    
    .hero-name {
      font-size: 2.5rem;
    }
    
    .hero-greeting {
      font-size: 1.5rem;
    }
    
    .hero-subtitle {
      font-size: 1.5rem;
    }
    
    .hero-description {
      font-size: 1rem;
    }
    
    .hero-profile {
      width: 200px;
      height: 200px;
    }
    
    .profile-initials {
      font-size: 4rem;
    }
  }
</style>
